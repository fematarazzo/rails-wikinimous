<div class="card" style="width: 70rem;">
  <% @articles.each do |article| %>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <%= link_to article_path(article) do %>
          <h2> <%= article.title %>  </h2>

        <% end %>
        <p class="my-1"> <%= article.content %> </p>
      </li>
    </ul>
  <% end %>
</div>
